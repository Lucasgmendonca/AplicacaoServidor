<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

    <!-- Botão para iniciar um percurso -->
    <Button
        android:id="@+id/btnIniciarPercurso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INICIAR PERCURSO"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="#00FF00" />

    <!-- Título para a seção de localização -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MINHAS COORDENADAS"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <!-- Layout para exibição da latitude -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Label para "Latitude" -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latitude: "
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333" />

        <!-- Valor da latitude -->
        <TextView
            android:id="@+id/latitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000" />

    </LinearLayout>

    <!-- Layout para exibição da longitude -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Label para "Longitude" -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Longitude: "
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333" />

        <!-- Valor da longitude -->
        <TextView
            android:id="@+id/longitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000" />

    </LinearLayout>

    <!-- Título para a seção do veículo -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DADOS DO MEU VEÍCULO"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <!-- Tempo para chegar ao destino final -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tempo Para Chegar ao Destino Final (s)"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        android:textColor="#333333" />

    <!-- Valor do tempo para chegar ao destino final -->
    <TextView
        android:id="@+id/tempoParaDestinoFinal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000" />

    <!-- Velocidade recomendada -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Velocidade Recomendada para Chegar no Destino Final no Tempo Estipulado (100s) (km/h)"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        android:textColor="#333333" />

    <!-- Valor da velocidade recomendada -->
    <TextView
        android:id="@+id/velocidadeRecomendada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000" />

    <!-- Velocidade entre os 2 últimos pontos de medição -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Velocidade Entre os 2 Últimos Pontos de Medição (km/h)"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        android:textColor="#333333" />

    <!-- Valor da velocidade média parcial -->
    <TextView
        android:id="@+id/velocidadeMediaParcial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000" />

    <!-- Velocidade média total -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Velocidade Média Total (km/h)"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        android:textColor="#333333" />

    <!-- Valor da velocidade média total -->
    <TextView
        android:id="@+id/velocidadeMediaTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000" />

    <!-- Tempo de deslocamento -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tempo de Deslocamento (s)"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        android:textColor="#333333" />

    <!-- Valor do tempo de deslocamento -->
    <TextView
        android:id="@+id/tempoDeslocamento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000" />

    <!-- Distância percorrida -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Distância Percorrida (km)"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        android:textColor="#333333" />

    <!-- Valor da distância percorrida -->
    <TextView
        android:id="@+id/distanciaPercorrida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000" />

    <!-- Consumo de combustível total -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Consumo de Combustível Total (litros)"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        android:textColor="#333333" />

    <!-- Valor do consumo de combustível total -->
    <TextView
        android:id="@+id/consumoCombustivelTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000" />

    <!-- Botão para reiniciar o programa -->
    <Button
        android:id="@+id/btnReiniciar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:text="REINICIAR PROGRAMA"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold" />

</LinearLayout>

</ScrollView>